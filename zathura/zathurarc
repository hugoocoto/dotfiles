# ui colors and font
set default-fg "#d0d0d0"
set default-bg "#222731"
set statusbar-fg "#222731"
set statusbar-bg "#d0d0d0"
set font "Iosevka NFM"

# dark theme
set recolor true
set recolor-lightcolor "#222731"
set recolor-darkcolor "#d0d0d0"

#increment j-k scroll
set scroll-step 80

# # vim binds
# map l navigate next
# map h navigate previous

# zoom
map <C-+> zoom in
map <C-=> zoom in
map <C--> zoom out

set selection-clipboard clipboard
